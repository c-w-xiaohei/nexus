{
  "name": "@nexus-js/core",
  "version": "0.1.1",
  "description": "The core engine for Nexus, a type-safe, default-safe, cross-context communication framework.",
  "private": false,
  "license": "MIT",
  "author": "Carson Yu",
  "repository": {
    "type": "git",
    "url": "https://github.com/c-w-xiaohei/nexus.git",
    "directory": "packages/core"
  },
  "keywords": [
    "ipc",
    "chrome-extension",
    "electron",
    "web-worker",
    "iframe",
    "postmessage",
    "type-safe"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@vitejs/plugin-react-swc": "4.2.3",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "eslint-plugin-vitest": "0.5.4",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "es-toolkit": "1.44.0",
    "neverthrow": "8.2.0",
    "zod": "4.3.6"
  }
}
